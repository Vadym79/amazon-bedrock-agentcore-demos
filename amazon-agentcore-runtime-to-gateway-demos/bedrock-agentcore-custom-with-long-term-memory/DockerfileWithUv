# Use uv's ARM64 Python base image
FROM --platform=linux/arm64 ghcr.io/astral-sh/uv:python3.13-bookworm-slim

WORKDIR /app

# Copy uv files
COPY pyproject.toml uv.lock ./

# Install dependencies (including strands-agents)

RUN uv sync --frozen --no-cache


# Copy agent file
COPY agentcore_runtime_custom_agent_with_short_term_memory_demo.py ./
COPY agent_core_utils.py ./
COPY strands_agents_long_term_memory_hook.py ./


# Expose port
EXPOSE 8080

# Run application
#CMD ["uv", "run", "uvicorn", "agentcore_runtime_custom_agent_with_short_term_memory_demo:app", "--host", "0.0.0.0", "--port", "8080"]
CMD ["opentelemetry-instrument", "uvicorn", "agentcore_runtime_custom_agent_with_long_term_memory_demo:app", "--host", "0.0.0.0", "--port", "8080"]